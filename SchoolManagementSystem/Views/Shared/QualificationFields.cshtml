@model SchoolManagementSystem.Models.QualificationModel

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="qualification">
        <div>
            @Html.LabelFor(model => model.CourseName, "Course Name")
            <div class="col-md-10">
            @Html.TextBoxFor(model => model.CourseName, new { @class = "qualification-course" })
            @Html.ValidationMessageFor(model => model.CourseName)
            </div>
        </div>
        <div>
            @Html.LabelFor(model => model.Percentage, "Percentage")
             <div class="col-md-10">
             @Html.TextBoxFor(model => model.Percentage, new { @class = "qualification-percentage", @Value=" " })
             @Html.ValidationMessageFor(model => model.Percentage)
             </div>
            </div>
        <div>
            @Html.LabelFor(model => model.YearOfPassing, "Year of Passing")
            <div class="col-md-10">
            @Html.TextBoxFor(model => model.YearOfPassing, new { @class = "qualification-year" ,@Value=" "})
             @Html.ValidationMessageFor(model => model.YearOfPassing)
            </div>
            </div>
        </div>
    @Html.Hidden("QualificationsJson", "")
</div>
}

